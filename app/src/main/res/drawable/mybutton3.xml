<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="50dip" />
            <stroke android:width="1dip" android:color="#8595aa" />
            <solid android:color="#b2b2b2"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <stroke android:width="1dip" android:color="#8595aa" />
            <gradient android:angle="-90" android:startColor="#8595aa" android:endColor="#0c71c3"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <stroke android:width="1dip" android:color="#8595aa" />
            <solid android:color="#0c71c3"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <gradient android:angle="-90" android:startColor="#2c94dc" android:endColor="#2dbdfb" />
        </shape>
    </item>

</selector>